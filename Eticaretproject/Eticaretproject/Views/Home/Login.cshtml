
@{
    ViewBag.Title = "Login";
}

<style>
    .left {
        width: 120px;
        float: left;
        margin: 5px;
    }

    .right {
        width: 120px;
        float: left;
    }
</style>




<h2>Üye Giriş Sayfası</h2>
<br />

@{ 
    if (ViewBag.Error !=null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
}



<form action="/Uye-Giris" method="post">
    <div class="left">
        @Html.Label("E posta adresinizi giriniz:")
    </div>
    <div class="right">@Html.TextBox("email")</div>
    <div class="row"></div>
    <div class="left">
        @Html.Label("Şifreniz:")
    </div>
    <div class="right">
        @Html.Password("password")
    </div>
    <div class="row"></div>
    <button type="submit">Giriş Yap</button>
</form>